<div class="col-md-12">
  <div class="job">

    <span class="pull-right">
     <% if current_user && current_user.is_member_of?(@job) %>
       <label class="label label-success"> 群组成员 </label>
            <%= link_to("Quit Job", quit_job_path(@job), method: :post, class: "btn btn-default") %>
     <% else %>
       <label class="label label-warning"> 不是群组成员 </label>
            <%= link_to("Join Job", join_job_path(@job), method: :post, class: "btn btn-default") %>
     <% end %>
   </span>

    <%= link_to("岗位细则", new_job_post_path(@job), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @job.user %>

    <%= link_to("Edit", edit_job_path(@job), class: "btn btn-primary pull-right")%>
  <% end %>
  </div>
  <h2><%= @job.职缺 %></h2>
  <p><%= @job.岗位描述 %></p>

  <table class="table">
    <thead>
      <tr>
        <th>职位</th>
        <th>发布者</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
   <%= will_paginate @posts %>
  </div>

</div>
