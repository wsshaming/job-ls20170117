<%= form_for @job do |f| %>

<div class="form-job">
  <div class="form-job string optional">
    <%= f.label "职缺", :class => "string optional control-label" %>
    <%= f.text_field :职缺, :class => "string optional form-control" %>
  </div>

  <div class="form-job string optional">
    <%= f.label "岗位描述", :class => "string optional control-label" %>
    <%= f.text_area :岗位描述, :class => "string optional form-control" %>
  </div>

</div>
<%= f.submit "添加", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
