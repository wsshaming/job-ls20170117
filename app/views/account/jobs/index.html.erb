<div class="col-md-12">

  <h2 class="text-center"> 我加入的讨论版 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 职缺 </th>
        <th> 岗位描述 </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(job.职缺, job_path(job)) %> </td>
          <td> <%= simple_format(job.岗位描述) %> </td>
          <td> <%= job.user.email %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
